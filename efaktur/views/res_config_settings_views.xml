<?xml version="1.0" encoding="utf-8"?>
<odoo>
		<record id="res_config_settings_view_efaktur_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.hr.payroll</field>
            <field name="model">res.config.settings</field>
        	<field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id="rounding_method" position="before">
	                <div class="col-xs-12 col-md-6 o_setting_box" title="Allows you to set display discount on efaktur csv" groups="account.group_account_user">
	                    <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label string="Discount efaktur"/>
                            <div class="text-muted">
                                Allows you to set display discount on efaktur csv
                            </div>
                             <div class="content-group">
                                <field name="discount_efaktur_display" class="o_light_label mt16" widget="radio"/>
                            </div>
                        </div>
	                </div>
	            </div>
            </field>
        </record>
        
</odoo>
