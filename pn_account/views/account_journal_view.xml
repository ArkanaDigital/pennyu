<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_account_bank_journal_form" model="ir.ui.view">
		<field name="name">account.bank.journal.form</field>
		<field name="model">account.journal</field>
		<field name="inherit_id" ref="account.view_account_bank_journal_form"/>
		<field name="arch" type="xml">
			<xpath expr="//sheet/group[1]/group[2]/field[@name='currency_id']" position="after">
				<field name="display_on_footer"/>
			</xpath>
		</field>
	</record>
</odoo>